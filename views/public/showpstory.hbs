<div class="spinner-wrapper">
  <div class="spinner"></div>
</div>
<div class="row">
  <div class="col s12 m8 ui">
    <h3 style="color: #000;">{{story.title}}</h3>
    <div class="sharing-button">
      <button
        onclick="share('{{story._id}}')"
        class="tooltipped"
        data-position="bottom"
        data-tooltip="Copy the shareable link of post"
        style="border: none;background-color: #aacfd5ff;"
      ><a style="font-size: 24px;text-decoration:none"><i
            class="fas fa-share"
          ></i></a></button>
      {{#if story.likers}}
        <i
          class="fas fa-thumbs-up tooltipped"
          data-position="bottom"
          data-tooltip="Number of Likes"
        ></i>
        {{story.likers}}
      {{else}}
        <i
          class="fas fa-thumbs-up tooltipped"
          data-position="bottom"
          data-tooltip="Number of Likes"
        ></i>
        0
      {{/if}}
    </div>
    <span
      id="counts"
      style="font-size:1rem; border: 3px solid #fff;padding:0.15rem"
    >Views: {{vis}}</span><br />
    <span style="font-size:larger;"> {{date}}</span>
    <div class="card story single">
      <div class="card-content img-resp">
        {{{story.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align" style="border-radius: 10px;">
      <div class="card-content">
        <span class="card-title">{{story.user.displayName}}</span>
        <img
          src="{{story.user.image}}"
          loading="lazy"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a href="/singleUser/user/{{story.user._id}}">More From
          {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
  {{#if comments}}
    <div class="col s12 m8">
      <h1 style="text-decoration: underline; font-size:2rem">COMMENTS</h1>
    </div>
  {{/if}}
  {{#each comments}}
    <div class="col s12 m8">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content" style="padding: 6px 14px;font-size:14px">
            <p>{{comment}}</p>
          </div>
          <div class="card-action" style="padding: 6px 14px;font-size:10px">
            <p>{{username}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}

</div>