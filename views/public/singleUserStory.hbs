<div class="spinner-wrapper">
  <div class="spinner"></div>
</div>
<h1 style="color: #000000;">Stories from,</h1>
<div class="row">
  <div class="col s12 m4 single-user-card">
    <div
      class="card center-align"
      style="border-radius: 10px; background-color: #aacfd5ff;"
    >
      <div class="card-content">
        <span
          class="card-title single-username"
          style="font-weight: bold;color:#298a91ff;"
        >{{detail.displayName}}</span>
        <img
          src="{{detail.image}}"
          class="circle responsive-img img-small single-userimage"
          style="width: 155px;"
        />
      </div>
    </div>
  </div>
  {{#each stories}}
    <div class="col s12 m6 l4">
      <div class="card">
        <div
          class="card-content center-align"
          style="background-color: #298a91ff;"
        >
          <h5
            style="color: #fff;"
            class="story-title-resp tooltipped"
            data-position="bottom"
            data-tooltip="{{title}}"
          >{{truncate title 16}}</h5>
          <p style="color: rgb(190, 190, 190);">category: {{category}}</p>
          <br />
          <br />
          <div class="chip resp-chip">
            <img
              src="{{user.image}}"
              loading="lazy"
              alt="{{user.displayName}}"
              class="userimage"
            />
            <a href="/singleUser/user/{{user._id}}" class="username">{{truncate
                user.displayName
                21
              }}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/publicStories/{{_id}}" class="btn grey read-btn-resp">Read
            the Post</a>
        </div>
        <div class="card-action center-align">
          {{#if comments}}
            <a
              href="/publicStories/{{_id}}/comments"
              class="btn grey read-btn-resp"
            >Read the Comments</a>
          {{else}}
            <a
              href="/login"
              class="btn grey read-btn-resp tooltipped"
              data-position="top"
              data-tooltip="Login to Comment & Like"
            >Comment on the Post</a>
          {{/if}}
        </div>
        <div class="card-action center-align">
          {{#if comments}}
            <i class="fas fa-comment"></i>
            {{comments.length}}
          {{else}}
            <i class="fas fa-comment"></i>
            0
          {{/if}}
          <i class="fas fa-eye"></i>
          {{visits}}
          {{#if likers}}
            <i class="fas fa-thumbs-up"></i>
            {{likers}}
          {{else}}
            <i class="fas fa-thumbs-up"></i>
            0
          {{/if}}
        </div>
      </div>
    </div>
  {{else}}
    <p>No stories to display</p>
  {{/each}}
</div>